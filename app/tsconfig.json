{
	"extends": [
		"../tsconfig.json"
	],
	"compilerOptions": {
		"types": [
			"vite/client"
		],
		//modules
		"module": "ESNext",
		"moduleResolution": "node",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		//emit
		"noEmit": true,
		//interop constraints
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		//language and environment
		"target": "ESNext",
	},
	"include": [
		"**/*.ts",
		"**/*.vue",
		".eslintrc.js"
	]
}