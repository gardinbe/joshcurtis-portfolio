{
	"extends": [
		"../tsconfig.types.json"
	],
	"compilerOptions": {
		//"exactOptionalPropertyTypes": false, //this does makes it annoying to do optional props
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ESNext",
		"types": [
			"vite/client",
			"./env.d.ts"
		],
		"paths": {
			"~/*": [
				"./src/*"
			]
		},
	},
	"include": [
		"**/*.ts",
		"**/*.vue",
		".eslintrc.js"
	]
}